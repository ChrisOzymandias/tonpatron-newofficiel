---
import Layout from '../../layouts/Layout.astro';
import React from 'react';
import BlogEditorReact from '../../components/BlogEditorReact.jsx';

const title = "Administration du blog - TonPatron";
const description = "Gérez vos articles de blog avec notre éditeur en ligne.";

interface Article {
  id: string;
  title: string;
  content: string;
  coverImage: string;
  createdAt: string;
  updatedAt: string;
}

const articles: Article[] = [
  {
    id: '1',
    title: 'Bienvenue sur notre blog',
    content: '<p>Bienvenue sur notre blog !</p>',
    coverImage: '',
    createdAt: new Date().toISOString(),
    updatedAt: new Date().toISOString(),
  },
  // Ajoutez d'autres articles ici
];

const initialContent = articles[0].content;

const handleSave = (content: string) => {
  const updatedArticle = {
    id: articles[0].id,
    title: articles[0].title,
    content,
    coverImage: articles[0].coverImage,
    createdAt: articles[0].createdAt,
    updatedAt: new Date().toISOString(),
  };
  
  // Ici, vous devriez sauvegarder l'article dans votre base de données
  console.log('Article sauvegardé:', updatedArticle);
};

const handleDelete = (id: string) => {
  if (confirm('Êtes-vous sûr de vouloir supprimer cet article ?')) {
    // Ici, vous devriez supprimer l'article de votre base de données
    console.log('Article supprimé:', id);
  }
};

const handleNewArticle = () => {
  // Ici, vous devriez créer un nouvel article dans votre base de données
  console.log('Nouvel article créé');
};

const handleEdit = (article: Article) => {
  // Ici, vous devriez afficher l'article à éditer
  console.log('Article à éditer:', article);
};

---

<Layout title={title} description={description}>
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">Administration du blog</h1>
      <button 
        class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
        onClick={handleNewArticle}
      >
        Nouvel article
      </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="md:col-span-2">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="space-y-6">
            <div>
              <label class="block text-gray-700 mb-2">Titre de l'article</label>
              <input
                type="text"
                value={articles[0].title}
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              />
            </div>

            <div>
              <label class="block text-gray-700 mb-2">Image de couverture</label>
              <input
                type="text"
                value={articles[0].coverImage}
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              />
            </div>

            <BlogEditorReact client:load initialContent={initialContent} onSave={handleSave} />
            
            <div class="flex justify-end gap-4 mt-6">
              <button 
                class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300"
              >
                Annuler
              </button>
            </div>
          </div>
        </div>
      </div>

      <div>
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-xl font-semibold mb-4">Articles récents</h2>
          <div class="space-y-4">
            {articles.map((article) => (
              <div class="border-b last:border-0 pb-4">
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="text-lg font-medium">{article.title}</h3>
                    <p class="text-sm text-gray-600">
                      {new Date(article.updatedAt).toLocaleDateString()}
                    </p>
                  </div>
                  <div class="flex gap-2">
                    <button 
                      class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
                      onClick={() => handleEdit(article)}
                    >
                      Éditer
                    </button>
                    <button 
                      class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700"
                      onClick={() => handleDelete(article.id)}
                    >
                      Supprimer
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
