---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Découvrez des avis authentiques d'employés sur leur entreprise" } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - TonPatron</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-gray-50">
    <!-- Nouveau Header modernisé -->
    <header class="w-full bg-white/80 backdrop-blur-lg shadow-sm fixed top-0 left-0 z-30 border-b border-blue-100">
      <div class="container mx-auto px-4 flex justify-between items-center h-20">
        <a href="/" class="flex items-center gap-2 text-2xl font-extrabold text-blue-700 tracking-tight">
          <img src="/favicon.svg" alt="TonPatron Logo" class="w-8 h-8" />
          TonPatron
        </a>
        <nav class="flex gap-6 text-base font-semibold">
          <a href="/entreprises" class="hover:text-blue-700 transition">Entreprises</a>
          <a href="/categories" class="hover:text-blue-700 transition">Catégories</a>
          <a href="/ajouter-avis" class="bg-blue-600 text-white px-5 py-2 rounded-lg shadow hover:bg-blue-700 transition">Ajouter un avis</a>
        </nav>
      </div>
    </header>
    <div class="container mx-auto px-4 pt-28">
      <!-- Contenu principal -->
      <main>
        <slot />
      </main>

      <!-- Footer -->
      <footer class="mt-20 py-8 border-t border-gray-200">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="font-bold mb-4">À propos</h3>
            <ul class="space-y-2">
              <li><a href="/a-propos" class="hover:text-blue-600">Qui sommes-nous</a></li>
              <li><a href="/contact" class="hover:text-blue-600">Contact</a></li>
              <li><a href="/faq" class="hover:text-blue-600">FAQ</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold mb-4">Légal</h3>
            <ul class="space-y-2">
              <li><a href="/confidentialite" class="hover:text-blue-600">Politique de confidentialité</a></li>
              <li><a href="/conditions" class="hover:text-blue-600">Conditions d'utilisation</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold mb-4">Suivez-nous</h3>
            <div class="flex gap-4">
              <a href="#" class="hover:text-blue-600">Twitter</a>
              <a href="#" class="hover:text-blue-600">LinkedIn</a>
            </div>
          </div>
        </div>
        <div class="mt-8 text-center text-gray-600">
          <p>&copy; {new Date().getFullYear()} TonPatron. Tous droits réservés.</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
